<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <it.crispybacon.mundial1x2.ui.imageview.FlagImageView
        android:id="@+id/flag_team_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/results_hidden_score"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/flag_team_away"
        app:layout_constraintStart_toEndOf="@+id/flag_team_home"
        app:layout_constraintTop_toTopOf="parent" />

    <it.crispybacon.mundial1x2.ui.imageview.FlagImageView
        android:id="@+id/flag_team_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="VEN 1/6"
        app:layout_constraintEnd_toStartOf="@+id/flag_team_away"
        app:layout_constraintStart_toEndOf="@+id/flag_team_home"
        app:layout_constraintTop_toBottomOf="@+id/text_score" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_result"
        android:layout_width="0dp"
        android:gravity="center"
        tools:text="@string/results_guess_right"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_date" />

    <ProgressBar
        android:id="@+id/progress_bets"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_lives"
        android:layout_width="wrap_content"
        tools:text="+1"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bets" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/text_lives"
        app:layout_constraintTop_toBottomOf="@+id/progress_bets" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="+15"
        app:layout_constraintEnd_toStartOf="@+id/text_points_label"
        app:layout_constraintTop_toBottomOf="@+id/progress_bets" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/results_points"
        app:layout_constraintTop_toBottomOf="@+id/progress_bets" />
</android.support.constraint.ConstraintLayout>