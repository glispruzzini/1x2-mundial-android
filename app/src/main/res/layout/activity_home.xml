<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Base.Theme.AppCompat.Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation_view"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <it.crispybacon.mundial1x2.ui.imageview.RoundedImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/icon_profile"
                android:layout_height="@dimen/icon_profile"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/big_margin"
                android:layout_marginTop="@dimen/big_margin"
                app:borderColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_container"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/basic_profile_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mid_margin"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Fabio"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_medium_big" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/home_today_matches"
                    android:textAllCaps="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/text_size_very_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/smaller_margin"
                    android:background="@color/colorLightGrey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/match_info_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basic_profile_info_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mid_margin"
                android:orientation="horizontal">

                <it.crispybacon.mundial1x2.ui.imageview.FlagImageView
                    android:id="@+id/img_left_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_marginStart="@dimen/small_margin"
                    android:orientation="vertical">

                    <it.crispybacon.mundial1x2.ui.text.DateTextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/text_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="20:00" />

                </LinearLayout>

                <it.crispybacon.mundial1x2.ui.imageview.FlagImageView
                    android:id="@+id/img_right_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <it.crispybacon.mundial1x2.ui.selector.BetSelectionView
                android:id="@+id/bet_selection_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/match_info_container"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/big_margin"
                android:gravity="center"
                android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorAccent"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu" />

</RelativeLayout>


